{
  "name": "Audio Speed Adjuster",
  "version": "0.1",
  "description": "Adjust the speed of HTML5 audio elements",
  "permissions": ["activeTab", "declarativeContent"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/audio_speed16.png",
      "32": "images/audio_speed32.png",
      "48": "images/audio_speed48.png",
      "128": "images/audio_speed128.png"
    }
  },
  "icons": {
    "16": "images/audio_speed16.png",
    "32": "images/audio_speed32.png",
    "48": "images/audio_speed48.png",
    "128": "images/audio_speed128.png"
  },
  "manifest_version": 2
}
